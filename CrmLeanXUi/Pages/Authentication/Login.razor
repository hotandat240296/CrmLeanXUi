@page "/login"
@layout CrmLeanXUi.Layout.AuthencationLayout
@using MudBlazor
@inject ISnackbar _snackBar
@inject NavigationManager Navigation

<MudSnackbarProvider />
<MudContainer>
    <EditForm Model="@loginModel" OnValidSubmit="SubmitLoginAsync">
        <DataAnnotationsValidator />

        <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Style="height: 100vh; display: flex; justify-content: center; align-items: center;">
            <!-- Left image column -->
            @* <MudItem xs="12" sm="6" Class="crm-login-img">
                <img src=""
                     onerror="this.onerror=null; this.src='https://firebasestorage.googleapis.com/v0/b/monkeyblogging-b8dd6.appspot.com/o/images%2FimageSignIn.png?alt=media&token=2fbfd7a0-94e5-4a14-bd1b-e06cb8a56bc9';"
                     alt="Login Image" />
            </MudItem> *@
            
            <MudItem xs="12" sm="6">
                <MudCard Class="w-full max-w-md py-5 login-card logo-border">
                    <MudCardContent>
                        <div style="width:100%">
                            <MudText Typo="Typo.h5" Class="mb-5" Align="Align.Center" Style="margin-top:-30px">
                                <MudImage Src="/images/LeanX-logo.png"
                                          Alt="CRM LeanX UI"
                                          Class="ml-2"
                                          Style="width:75%;height:auto" />
                            </MudText>
                        </div>

                        <MudText Class="fs-5" style="margin-bottom: 32px;margin-top:-15px; font-weight:bold" Align="Align.Center">Nhập thông tin đăng nhập của bạn</MudText>

                        <!-- username -->
                        <div class="mb-5">
                            <MudTextField @bind-Value="loginModel.username" For="@(() => loginModel.username)" Label="Email" Variant="Variant.Outlined" style="margin-bottom: 4px;" />
                        </div>

                        <!-- password -->
                        <div>
                            <MudTextField @bind-Value="loginModel.password"
                                          For="@(() => loginModel.password)"
                                          Label="Mật khẩu" Variant="Variant.Outlined"
                                          InputType="@_passwordInput"
                                          Adornment="Adornment.End"
                                          AdornmentIcon="@_passwordInputIcon"
                                          OnAdornmentClick="TogglePasswordVisibility"
                                          AdornmentAriaLabel="Show Password" style="margin-bottom: 4px;" />
                        </div>

                        <!-- remember me -->
                        <div style="display:flex; justify-content:space-between; align-items:center;">
                            <MudCheckBox @bind-Value="loginModel.rememberMe" Color="Color.Primary">Ghi nhớ mật khẩu?</MudCheckBox>
                            <NavLink class="nav-link ms-auto text-end mt-5 mb-5 fs-6" href="/forgot-password">
                                <span class="bi bi-plus-square-fill-nav-menu " aria-hidden="true"></span> Quên mật khẩu?
                            </NavLink>
                        </div>

                        <!-- Submit btn -->
                        <MudButton ButtonType="ButtonType.Submit" FullWidth Variant="Variant.Filled" Style="height: 50px; font-size:20px;" Color="Color.Primary" Disabled="isLoading">
                            @if (isLoading)
                            {
                                <MudProgressCircular Style="height:35px;width:35px;" Color="Color.Primary" Indeterminate="true" />
                            }
                            else
                            {
                                <span> ĐĂNG NHẬP</span>
                            }
                        </MudButton>

                       <!-- link register -->
                        <NavLink class="nav-link ms-auto text-center fs-6 mt-5" href="/register">
                            <span style="color:#000">Chưa có tài khoản?</span>
                            <span class="bi bi-plus-square-fill-nav-menu " aria-hidden="true"></span> Đăng ký ngay
                        </NavLink>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </EditForm>
</MudContainer>
<style>
    .login-card {
        transition: all 0.25s ease-in-out;
        border-radius: 12px;
    }

        .login-card:hover {
            transform: translateY(-6px) scale(1.02);
            box-shadow: 0px 15px 35px rgba(0, 0, 0, 0.18);
            border: 1px solid rgba(25, 118, 210, 0.3);
        }

    .logo-glow-border {
        position: relative;
        width: 75%;
        margin: 0 auto;
        padding: 6px;
        border-radius: 12px;
        overflow: hidden;
    }

        .logo-glow-border::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: inherit;
            border: 2px solid transparent;
            /* line ánh kim chạy theo viền */
            background: linear-gradient(0deg, transparent 0%, transparent 40%, rgba(255, 215, 0, 0.9) 50%, /* tia sáng vàng */
            transparent 60%, transparent 100% ) border-box;
            animation: rotateBorder 3s linear infinite;
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask-composite: exclude;
        }

    .logo-img {
        width: 100%;
        border-radius: 10px;
    }

    /* Quay vòng */
    @@keyframes rotateBorder {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }
</style>